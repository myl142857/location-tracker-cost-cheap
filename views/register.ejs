<% layout('layout_header') -%>
<div class="span10">
<h1> Sign up </h1>
<form class="well" action="/register" method="post" accept-charset="UTF-8" onsubmit="return CheckBeforeSubmission();">
      <h5 id="error" style="color:red"></h5>
      <h5 id="error1" style="color:red"> <%= error %></h5>
      <label> Name </label>
      <input id="name" name="name" type="text" class="span4" placeholder="Enter a name (optional)"/> </br>
      <label> Username </label>
      <input id="email" name ="email" type="email" class="span4" placeholder="Enter an email address"/> </br>
      <label> Password </label> 
      <input id="password" name="password" type="password" class="span4" placeholder="Enter a valid password."/> </br> 
      <label> Confirm Password </label> 
      <input id="confirm_password" name="confirm_password" type="password" class="span4" placeholder="Enter the password again."/> </br> </br>
      <button class="btn btn-primary">Sing up</button>    
</form>

</div>

<script type="text/javascript">
    function CheckBeforeSubmission()
    {
        $('#error1').hide();
        if( ! $('#name').val() ) {
            $('#error').html('Please enter a name');
        } else if( ! $('#email').val() ) {
            $('#error').html('Please enter email address');
        } else if( ! $('#password').val() ) {
            $('#error').html('Please enter a password');
        } else if( ! $('#confirm_password').val() ) {
            $('#error').html('Please enter confirm password');
        }  else if( $('#password').val() != $('#confirm_password').val() ) {
            $('#error').html('Password & Confirm password doesnt match.Please try again');
        } else {
            return true;
        }
       return false;
    }
</script>