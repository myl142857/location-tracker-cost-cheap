<% layout('user_header') -%>


<div class='row'>	
	<div class="span3 pull-left">
		<h5>Settings </h5>
	</div>
	<div class="span3 pull-right">
		<form action="/user" method="delete" accept-charset="UTF-8">
			<button type="submit" class="btn btn-primary">
  				<i class="icon-trash icon-white"></i> Delete Accout
			</button>
		</form>
	</div>
</div>


<div class='row'>	
	<div class="span5">
		<form action="/device" method="post" accept-charset="UTF-8" onsubmit="return CheckBeforeSubmission();">
			<input id="device" name="device" type="text" size ="30" placeholder="phonenumber.eg 842-234-2823"/>
			<button type="submit" class="btn btn-primary">
  				<i class="icon-plus icon-white"></i> Add Device
			</button>
		</form>
	</div>
</div>

<ul>
<% for(var i=0; i<devices.length; i++) {%>
   <li><%= devices[i] %></li>
<% } %>
</ul>

<script type="text/javascript">
    function CheckBeforeSubmission()
    {
        if( ! $('#device').val() ) {
            alert('Please enter a valid phone number');
        } else {
            return true;
        }
       return false;
    }
</script>


